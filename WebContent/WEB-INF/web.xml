<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
  <servlet>
    <servlet-name>LogIn</servlet-name>
    <servlet-class>bankSystem.servlet.LogInServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>welcome</servlet-name>
    <servlet-class>bankSystem.servlet.WelcomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logOff</servlet-name>
    <servlet-class>bankSystem.servlet.LogOffServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>businessService</servlet-name>
    <servlet-class>bankSystem.servlet.businessServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logquery</servlet-name>
    <servlet-class>bankSystem.servlet.logQueryServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>departmentservice</servlet-name>
    <servlet-class>bankSystem.servlet.departmentServiceServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logStatistics</servlet-name>
    <servlet-class>bankSystem.servlet.logStatisticsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogIn</servlet-name>
    <url-pattern>/login.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>welcome</servlet-name>
    <url-pattern>/welcome.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logOff</servlet-name>
    <url-pattern>/logoff.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>businessService</servlet-name>
    <url-pattern>/businessservice.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logquery</servlet-name>
    <url-pattern>/logquery.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>departmentservice</servlet-name>
    <url-pattern>/departmentservice.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logStatistics</servlet-name>
    <url-pattern>/logstatistics.action</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>bankSystem.servlet.filter.logInFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  
  <listener>
  	<listener-class>bankSystem.servlet.listener.vipListener</listener-class>
  </listener>
</web-app>